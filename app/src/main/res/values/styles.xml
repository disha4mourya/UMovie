<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/menu_color</item>
        <item name="android:state_selected">@color/colorDivider</item>
        <!-- <item name="android:itemBackground">@color/menu_color</item>-->
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/menu_color</item>
        <item name="android:state_selected">@color/colorDivider</item>
        <!-- <item name="android:itemBackground">@color/menu_color</item>-->
    </style>

    <style name="AppTheme.GaryAccent">
        <item name="colorAccent">@color/colorDivider</item>
    </style>
    <style name="RatingBar" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="colorControlNormal">@color/colorIcon</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>
</resources>
